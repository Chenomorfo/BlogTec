---
const { link, titulo } = Astro.props;
---

<a href={link}>
    <li>
        <span></span>
        {titulo}
    </li>
</a>

<style>
    a {
        width: fit-content;
        user-select: none;
        cursor: pointer;
    }
    li {
        width: 80px;
        display: grid;
        grid-auto-flow: column;
        gap: 5px;
        align-items: center;
        color: white;
        font-weight: 500;
        text-transform: uppercase;
        transition: all .2s ease;
    }
    span {
        display: flex;
        height: 15px;
        width: 15px;
        background-color: white;
        clip-path: polygon(
            0% 0%,
            0% 50%,
            0% 100%,
            50% 100%,
            100% 100%,
            100% 65%,
            35% 65%,
            35% 0
        );
        transition: all 0.3s ease;
    }
    a:hover li{
        padding-left: 5px;
    }
    a:hover span {
        rotate: 90deg;
    }
</style>
